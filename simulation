using PyPlot
using Distributions




function w_f(A,N)

  #repetition, generation numbers
  rep=10
  gen=500

  #define a store matrix: cells == Population evolution in each repetition; columns== generation number
  matrix= zeros(rep,gen)

  #initial state
  matrix[:,1] = N/2
  gen_vec= zeros(1,gen)
  #generation loop
  for n in 1:rep
    for t in 2:gen

      #mutation

      #genetic drift
      p=matrix[n,t-1]/N
      A=rand(Binomial(N,p))
      #Update
      matrix[n,t]= A
      if A==0 || A==N
        gen_vec[1,t-1]=t
        break
      end

    end




end
gen_vec
matrix[:,]
end
